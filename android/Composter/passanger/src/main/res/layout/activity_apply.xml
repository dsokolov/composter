<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="А 111 АА 58 RUS"
        android:textSize="40dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/route_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Откуда"
        android:gravity="center"
        android:layout_below="@+id/car"
        />

    <TextView
        android:id="@+id/route_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Куда"
        android:gravity="center"
        android:layout_below="@+id/route_from"
        />

    <ImageView
        android:id="@+id/car_logo"
        android:layout_height="100dp"
        android:background="@drawable/t"
        android:layout_centerInParent="true"
        android:layout_width="200dp" />

    <View
        android:id="@+id/line"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/car_logo"/>

    <TextView
        android:id="@+id/name_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Водитель"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/line"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/name_title"
        />

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_above="@+id/apply"
        android:text="Не мой транспорт" />

    <Button
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="Оплатить" />

</RelativeLayout>